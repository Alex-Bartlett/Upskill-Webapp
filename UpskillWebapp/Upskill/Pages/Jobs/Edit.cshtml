                <label asp-for="Job.FinishedDate" class="control-label"></label>
                <input asp-for="Job.FinishedDate" class="form-control" />
                <span asp-validation-for="Job.FinishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Notes" class="control-label"></label>
                <input asp-for="Job.Notes" class="form-control" />
                <span asp-validation-for="Job.Notes" class="text-danger"></span>

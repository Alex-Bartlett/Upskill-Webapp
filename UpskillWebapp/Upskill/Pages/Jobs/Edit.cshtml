            </div>
            <div class="form-group">
                <label asp-for="Job.DaysWorked" class="control-label"></label>
                <input asp-for="Job.DaysWorked" class="form-control" />
                <span asp-validation-for="Job.DaysWorked" class="text-danger"></span>

@page
@model Upskill.Pages.StaffJobs.CreateModel

@{
    ViewData["Title"] = "Add Task";
}

<h1>Add Task</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaffJob.StaffMember" class="control-label"></label>
                <select asp-for="StaffJob.StaffMemberID" class="form-control" asp-items="@Model.StaffNameSL">
                    <option>-- Select Staff Member --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StaffJob.Date" class="control-label"></label>
                <input asp-for="StaffJob.Date" class="form-control" />
                <span asp-validation-for="StaffJob.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffJob.DaysWorked" class="control-label"></label>
                <input asp-for="StaffJob.DaysWorked" class="form-control" />
                <span asp-validation-for="StaffJob.DaysWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffJob.HoursWorked" class="control-label"></label>
                <input asp-for="StaffJob.HoursWorked" class="form-control" />
                <span asp-validation-for="StaffJob.HoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffJob.Materials" class="control-label"></label>
                <textarea asp-for="StaffJob.Materials" class="form-control"></textarea>
                <span asp-validation-for="StaffJob.Materials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffJob.Notes" class="control-label"></label>
                <textarea asp-for="StaffJob.Notes" class="form-control"></textarea>
                <span asp-validation-for="StaffJob.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" name="returnUrl" value="@Model.ReturnURL" />
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
